{
  "info": {
    "name": "Product Video Express API",
    "description": "Collection completa para probar el módulo de generación de videos con IA",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "12345"
  },
  "item": [
    {
      "name": "1. Get Stats",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has stats data\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data).to.have.property('total');",
              "    pm.expect(jsonData.data).to.have.property('completed');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "token",
            "value": "{{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/video-express/stats",
          "host": ["{{base_url}}"],
          "path": ["api", "video-express", "stats"]
        },
        "description": "Obtiene estadísticas de jobs del usuario"
      },
      "response": []
    },
    {
      "name": "2. List Jobs",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has jobs array\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data).to.have.property('jobs');",
              "    pm.expect(jsonData.data.jobs).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "token",
            "value": "{{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/video-express/jobs?limit=10",
          "host": ["{{base_url}}"],
          "path": ["api", "video-express", "jobs"],
          "query": [
            {
              "key": "limit",
              "value": "10"
            }
          ]
        },
        "description": "Lista los jobs del usuario con límite de 10"
      },
      "response": []
    },
    {
      "name": "3. Create Video Job",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Job created successfully\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data.job).to.have.property('id');",
              "    pm.expect(jsonData.data.job).to.have.property('status');",
              "    ",
              "    // Guardar el job_id para usar en las siguientes requests",
              "    pm.environment.set('job_id', jsonData.data.job.id);",
              "    console.log('Job ID guardado:', jsonData.data.job.id);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "token",
            "value": "{{admin_token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "product_image",
              "description": "Selecciona una imagen JPG o PNG (máx 10MB)",
              "type": "file",
              "src": []
            },
            {
              "key": "animation_style",
              "value": "parallax",
              "description": "Opciones: zoom_in | parallax | subtle_float",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/video-express/jobs",
          "host": ["{{base_url}}"],
          "path": ["api", "video-express", "jobs"]
        },
        "description": "Crea un nuevo job de generación de video. Requiere subir una imagen."
      },
      "response": []
    },
    {
      "name": "4. Get Job Status",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Job has valid status\", function () {",
              "    var jsonData = pm.response.json();",
              "    var validStatuses = ['pending', 'processing', 'completed', 'failed'];",
              "    pm.expect(validStatuses).to.include(jsonData.data.job.status);",
              "    ",
              "    console.log('Job Status:', jsonData.data.job.status);",
              "    ",
              "    if (jsonData.data.job.status === 'completed') {",
              "        console.log('✅ Video completado!');",
              "        console.log('Video URL:', jsonData.data.job.output_video_url);",
              "    } else if (jsonData.data.job.status === 'processing') {",
              "        console.log('⏳ Video procesando... Espera 30s y vuelve a consultar');",
              "    }",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "token",
            "value": "{{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/video-express/jobs/{{job_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "video-express", "jobs", "{{job_id}}"]
        },
        "description": "Consulta el estado de un job específico. Ejecuta cada 30 segundos hasta que status sea 'completed'."
      },
      "response": []
    },
    {
      "name": "5. Download Video",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response is MP4 file\", function () {",
              "    pm.expect(pm.response.headers.get('Content-Type')).to.include('video');",
              "});",
              "",
              "console.log('✅ Video descargado. Haz click en \"Save Response\" → \"Save to a file\"');"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "token",
            "value": "{{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/video-express/download/{{job_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "video-express", "download", "{{job_id}}"]
        },
        "description": "Descarga el video generado. Solo funciona cuando el job status es 'completed'."
      },
      "response": []
    },
    {
      "name": "6. Delete Job",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Job deleted successfully\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.message).to.include('eliminado');",
              "});",
              "",
              "console.log('✅ Job eliminado correctamente');"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "token",
            "value": "{{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/video-express/jobs/{{job_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "video-express", "jobs", "{{job_id}}"]
        },
        "description": "Elimina un job y sus archivos asociados."
      },
      "response": []
    }
  ],
