# SSL A+ Configuration compatible with Certbot - API
# Este archivo mantiene la funcionalidad original + mejoras SSL A+

server {
    server_name api.lujandev.com;
    
    # Configuración original del proxy (MANTENER IGUAL)
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $remote_addr;
    
    location / {
        proxy_pass http://localhost:3500;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_connect_timeout       600;
        proxy_send_timeout          600;
        proxy_read_timeout          600;
        send_timeout                600;
        
        # Security headers adicionales (SSL A+)
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
        add_header X-Frame-Options DENY always;
        add_header X-Content-Type-Options nosniff always;
        add_header X-XSS-Protection "1; mode=block" always;
        add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    }

    # SSL Configuration original de Certbot (MANTENER)
    listen 443 ssl http2; # HTTP/2 añadido para A+
    ssl_certificate /etc/letsencrypt/live/api.lujandev.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/api.lujandev.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    # SSL A+ enhancements (compatibles con Certbot)
    # Note: ssl_session_cache, ssl_session_timeout ya están en options-ssl-nginx.conf
    
    # Security headers globales
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header X-Frame-Options DENY always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Disable server tokens
    server_tokens off;
}

server {
    if ($host = api.lujandev.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    server_name api.lujandev.com;
    listen 80;
    return 404; # managed by Certbot
}